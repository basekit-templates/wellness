{% extends "layout.twig" %}
{% block class %}bk-pt-home{% endblock %}
{% block content %}

<div class="hero">

    <!-- Theme Feature Widget -->
    {{widget('feature', 'featurehome', {
        'header': 'profile',
        'defaultBgImg': asset("images/feature.jpg"),
        'positionTopPercentage': '0',
        'showBtn': true,
        buttonText: "Lorem Ipsum"
    })|raw}}

    <!-- Header -->
    <div class="hero-header">

        <div class="flex-container">

            <div class="flex-item flex-profile1">
                {{widget('profile', 'email', { 'profileType':'email', 'email':'profile'})|raw}}
            </div>
            <div class="flex-item flex-nav">
                {{widget('extendednavigation', 'navigation', {"align":"center"})|raw}}
            </div>
            <div class="flex-item flex-profile2">
                {{widget('profile', 'phone', { 'profileType':'phone', 'phone':'profile'})|raw}}
            </div>

        </div>

        <div class="hero-logo">
            {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
            {{widget('companyname', 'companyname', {
                "business": "profile"
            })|raw}}
        </div>

    </div>

</div>

<!-- Container -->
<div class="container">

    <!-- Page Content -->
    <section class="template-content">

        <!-- Main Widget Zone -->
        {{zone('main')|raw}}

    </section>
    <!-- End Page Content -->

</div>
<!-- End Container -->

<!-- Footer Include -->
{% include "includes/footer.twig" %}


{% endblock %}
